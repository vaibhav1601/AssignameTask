<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/ll"
        app:layout_constraintStart_toStartOf="@+id/ll"
        app:layout_constraintTop_toBottomOf="@id/ll">

        <RelativeLayout
            android:id="@+id/rl_user_placeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp">

                <LinearLayout
                    android:id="@+id/iv_img1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/materialCardView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:clickable="true"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:layout_editor_absoluteX="8dp">


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cl_header"
                            android:layout_width="match_parent"
                            android:background="@color/white_tran"
                            android:layout_height="match_parent">


                            <ImageView
                                android:id="@+id/iv_profile_img"
                                android:layout_width="72dp"
                                android:layout_height="100dp"
                                android:layout_marginLeft="17dp"
                                android:layout_marginTop="13dp"
                                android:src="@drawable/ic_twotone_perm_identity_24"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/tv_name_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="13dp"
                                android:layout_marginRight="13dp"
                                android:lineHeight="15sp"
                                android:maxLines="2"
                                android:text="Name"
                                app:layout_constraintRight_toLeftOf="@+id/iv_profile_img"
                                app:layout_constraintStart_toEndOf="@+id/iv_profile_img"
                                app:layout_constraintTop_toTopOf="parent" />


                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="13dp"
                                android:layout_marginRight="13dp"
                                android:lineHeight="15sp"
                                android:maxLines="2"
                                android:text="ddd"
                                app:layout_constraintRight_toLeftOf="@+id/iv_profile_img"
                                app:layout_constraintStart_toEndOf="@+id/tv_name_label"
                                app:layout_constraintTop_toTopOf="parent" />


                            <TextView
                                android:id="@+id/tvtv_email_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="17dp"
                                android:text="Email"
                                app:layout_constraintStart_toEndOf="@+id/iv_profile_img"
                                app:layout_constraintTop_toBottomOf="@+id/tv_name" />

                            <TextView
                                android:id="@+id/tvtv_email"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="www@sd"
                                app:layout_constraintStart_toEndOf="@+id/tvtv_email_label"
                                app:layout_constraintTop_toBottomOf="@+id/tv_name"
                                app:layout_constraintTop_toTopOf="@+id/tvtv_email_label" />


                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/iv_img2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_img1"
                    android:layout_margin="8dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/materialCardView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:clickable="true"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:layout_editor_absoluteX="8dp">


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cl_header1"
                            android:layout_width="match_parent"
                            android:background="@color/white_tran"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/iv_profile_img1"
                                android:layout_width="72dp"
                                android:layout_height="100dp"
                                android:layout_marginLeft="17dp"
                                android:layout_marginTop="13dp"
                                android:src="@drawable/ic_twotone_perm_identity_24"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/tv_name_label1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="13dp"
                                android:layout_marginRight="13dp"
                                android:lineHeight="15sp"
                                android:maxLines="2"
                                android:text="Name"
                                app:layout_constraintRight_toLeftOf="@+id/iv_profile_img1"
                                app:layout_constraintStart_toEndOf="@+id/iv_profile_img1"
                                app:layout_constraintTop_toTopOf="parent" />


                            <TextView
                                android:id="@+id/tv_name1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="13dp"
                                android:layout_marginRight="13dp"
                                android:lineHeight="15sp"
                                android:maxLines="2"
                                android:text="ddd"
                                app:layout_constraintRight_toLeftOf="@+id/iv_profile_img1"
                                app:layout_constraintStart_toEndOf="@+id/tv_name_label1"
                                app:layout_constraintTop_toTopOf="parent" />


                            <TextView
                                android:id="@+id/tvtv_email_label1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="17dp"
                                android:text="Email"
                                app:layout_constraintStart_toEndOf="@+id/iv_profile_img1"
                                app:layout_constraintTop_toBottomOf="@+id/tv_name1" />

                            <TextView
                                android:id="@+id/tvtv_email1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="ggg@gnn"
                                app:layout_constraintStart_toEndOf="@+id/tvtv_email_label1"
                                app:layout_constraintTop_toBottomOf="@+id/tv_name1"
                                app:layout_constraintTop_toTopOf="@+id/tvtv_email_label1" />


                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/iv_img3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_img2"
                    android:layout_margin="8dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/materialCardView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:clickable="true"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:layout_editor_absoluteX="8dp">


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cl_header2"
                            android:layout_width="match_parent"
                            android:background="@color/white_tran"
                            android:layout_height="match_parent">


                            <ImageView
                                android:id="@+id/iv_profile_img2"
                                android:layout_width="72dp"
                                android:layout_height="100dp"
                                android:layout_marginLeft="17dp"
                                android:layout_marginTop="13dp"
                                android:src="@drawable/ic_twotone_perm_identity_24"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/tv_name_label2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="13dp"
                                android:layout_marginRight="13dp"
                                android:lineHeight="15sp"
                                android:maxLines="2"
                                android:text="Name"
                                app:layout_constraintRight_toLeftOf="@+id/iv_profile_img2"
                                app:layout_constraintStart_toEndOf="@+id/iv_profile_img2"
                                app:layout_constraintTop_toTopOf="parent" />


                            <TextView
                                android:id="@+id/tv_name2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="13dp"
                                android:layout_marginRight="13dp"
                                android:lineHeight="15sp"
                                android:maxLines="2"
                                android:text="aaa"
                                app:layout_constraintRight_toLeftOf="@+id/iv_profile_img2"
                                app:layout_constraintStart_toEndOf="@+id/tv_name_label2"
                                app:layout_constraintTop_toTopOf="parent" />


                            <TextView
                                android:id="@+id/tvtv_email_label2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="17dp"
                                android:text="Email"
                                app:layout_constraintStart_toEndOf="@+id/iv_profile_img2"
                                app:layout_constraintTop_toBottomOf="@+id/tv_name2" />

                            <TextView
                                android:id="@+id/tvtv_email2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="dfg@fff"
                                app:layout_constraintStart_toEndOf="@+id/tvtv_email_label2"
                                app:layout_constraintTop_toBottomOf="@+id/tv_name2"
                                app:layout_constraintTop_toTopOf="@+id/tvtv_email_label2" />


                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/iv_img4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_img3"
                    android:layout_margin="8dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/materialCardView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:clickable="true"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:layout_editor_absoluteX="8dp">


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cl_header3"
                            android:layout_width="match_parent"
                            android:background="@color/white_tran"
                            android:layout_height="match_parent">


                            <ImageView
                                android:id="@+id/iv_profile_img3"
                                android:layout_width="72dp"
                                android:layout_height="100dp"
                                android:layout_marginLeft="17dp"
                                android:layout_marginTop="13dp"
                                android:src="@drawable/ic_twotone_perm_identity_24"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/tv_name_label3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="13dp"
                                android:layout_marginRight="13dp"
                                android:lineHeight="15sp"
                                android:maxLines="2"
                                android:text="Name"
                                app:layout_constraintRight_toLeftOf="@+id/iv_profile_img3"
                                app:layout_constraintStart_toEndOf="@+id/iv_profile_img3"
                                app:layout_constraintTop_toTopOf="parent" />


                            <TextView
                                android:id="@+id/tv_name3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="13dp"
                                android:layout_marginRight="13dp"
                                android:lineHeight="15sp"
                                android:maxLines="2"
                                android:text="abc"
                                app:layout_constraintRight_toLeftOf="@+id/iv_profile_img3"
                                app:layout_constraintStart_toEndOf="@+id/tv_name_label3"
                                app:layout_constraintTop_toTopOf="parent" />


                            <TextView
                                android:id="@+id/tvtv_email_label3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="17dp"
                                android:text="Email"
                                app:layout_constraintStart_toEndOf="@+id/iv_profile_img3"
                                app:layout_constraintTop_toBottomOf="@+id/tv_name3" />

                            <TextView
                                android:id="@+id/tvtv_email3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="abc@123"
                                app:layout_constraintStart_toEndOf="@+id/tvtv_email_label3"
                                app:layout_constraintTop_toBottomOf="@+id/tv_name3"
                                app:layout_constraintTop_toTopOf="@+id/tvtv_email_label3" />


                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>

            </RelativeLayout>


        </RelativeLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_itemlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>