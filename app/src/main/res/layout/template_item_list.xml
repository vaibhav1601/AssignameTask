<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/materialCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:clickable="true"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/iv_profile_img"
                android:layout_width="72dp"
                android:layout_height="100dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="13dp"
                android:src="@drawable/ic_no_photo_svgrepo_com"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="13dp"
                android:lineHeight="15sp"
                android:maxLines="2"
                android:text="Name"
                app:layout_constraintRight_toLeftOf="@+id/iv_profile_img"
                app:layout_constraintStart_toEndOf="@+id/iv_profile_img"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="13dp"
                android:lineHeight="15sp"
                android:maxLines="2"
                android:text="Vaibhav Kulkarni"
                app:layout_constraintRight_toLeftOf="@+id/iv_profile_img"
                app:layout_constraintStart_toEndOf="@+id/tv_name_label"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tvtv_email_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="17dp"
                android:text="Email"
                app:layout_constraintStart_toEndOf="@+id/iv_profile_img"
                app:layout_constraintTop_toBottomOf="@+id/tv_name" />

            <TextView
                android:id="@+id/tvtv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="vkulkarni1601@gmail.com"
                app:layout_constraintStart_toEndOf="@+id/tvtv_email_label"
                app:layout_constraintTop_toBottomOf="@+id/tv_name"
                app:layout_constraintTop_toTopOf="@+id/tvtv_email_label" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>